{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "strict": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": [ "src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
